<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F1A3A"
    android:padding="16dp"
    tools:context=".ResultsReport">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- White Card Container -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Batch/Course Spinner Label -->
                <TextView
                    android:id="@+id/batchLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Batch - Course"
                    android:textColor="#000000"
                    android:layout_margin="8dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <Spinner
                    android:id="@+id/batchSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_margin="8dp"
                    android:background="@android:color/transparent"
                    android:theme="@style/SpinnerStyle"
                    android:spinnerMode="dropdown" />

                <!-- Student Spinner Label -->
                <TextView
                    android:id="@+id/studentLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Student"
                    android:textColor="#000000"
                    android:layout_margin="8dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <Spinner
                    android:id="@+id/studentSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_margin="8dp"
                    android:background="@android:color/transparent"
                    android:theme="@style/SpinnerStyle"
                    android:spinnerMode="dropdown" />

                <!-- Show Results Button -->
                <Button
                    android:id="@+id/showResultsButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Show Results"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#4D9BE6"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Report Section -->
        <LinearLayout
            android:id="@+id/reportSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="4dp"
            android:visibility="gone"
            android:layout_marginBottom="16dp"
            android:clipToPadding="false">

            <!-- Logo Image -->
            <ImageView
                android:id="@+id/reportImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="Report Logo"
                android:src="@drawable/ic_report"
                android:scaleType="fitCenter"
                android:layout_marginBottom="12dp" />

            <!-- Report Title -->
            <TextView
                android:id="@+id/reportTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Student Results"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp" />

            <!-- Table Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:background="#E0E0E0"
                android:paddingVertical="8dp"
                android:paddingHorizontal="12dp">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Subject"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textAlignment="center" />

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Grade"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textAlignment="center" />
            </LinearLayout>

            <!-- Results rows container -->
            <LinearLayout
                android:id="@+id/resultsRowsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
