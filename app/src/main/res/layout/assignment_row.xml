<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginBottom="12dp"
    android:id="@+id/assignmentCard"
    android:elevation="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Assignment ID with icon -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_subject_id"
                app:tint="#4D9BE6" />

            <TextView
                android:id="@+id/assignmentId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123"
                android:textColor="#4D9BE6"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:letterSpacing="0.03" />
        </LinearLayout>

        <!-- Assignment Name -->
        <TextView
            android:id="@+id/assignmentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Final Project Report"
            android:textSize="18sp"
            android:textColor="#0F1A3A"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="2dp" />

        <!-- Due Date & Time with clock icon -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_clock"
                app:tint="#4D9BE6" />

            <TextView
                android:id="@+id/assignmentDueDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025-07-15 23:59"
                android:textColor="#4D9BE6"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Download PDF with icon -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_download"
                app:tint="#1A73E8" />

            <TextView
                android:id="@+id/assignmentDownload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Download PDF"
                android:textColor="#1A73E8"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
