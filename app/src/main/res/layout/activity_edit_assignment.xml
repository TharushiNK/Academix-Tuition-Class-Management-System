<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F1A3A"
    android:fillViewport="true"
    tools:context=".EditAssignment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#0F1A3A">

        <!-- Header -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Assignment"
            android:layout_marginTop="100dp"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Assignment Name -->
        <TextView
            android:id="@+id/assignmentNameLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Assignment Name"
            android:textColor="#B3FFFFFF"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/titleText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/assignmentNameCard"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="#1A2B5A"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/assignmentNameLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                android:id="@+id/assignmentNameEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:background="@android:color/transparent"
                android:hint="Enter assignment name"
                android:textColor="#FFFFFF"
                android:textColorHint="#B3FFFFFF"
                android:inputType="text" />
        </androidx.cardview.widget.CardView>

        <!-- Due Date -->
        <TextView
            android:id="@+id/dueDateLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Due Date"
            android:textColor="#B3FFFFFF"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/assignmentNameCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/dueDateCard"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="#1A2B5A"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/dueDateLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                android:id="@+id/dueDateEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:background="@android:color/transparent"
                android:hint="Select due date"
                android:textColor="#FFFFFF"
                android:textColorHint="#B3FFFFFF"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none" />
        </androidx.cardview.widget.CardView>

        <!-- Due Time -->
        <TextView
            android:id="@+id/dueTimeLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Due Time"
            android:textColor="#B3FFFFFF"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/dueDateCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/dueTimeCard"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="#1A2B5A"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/dueTimeLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                android:id="@+id/dueTimeEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:background="@android:color/transparent"
                android:hint="Select due time"
                android:textColor="#FFFFFF"
                android:textColorHint="#B3FFFFFF"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none" />
        </androidx.cardview.widget.CardView>

        <!-- Upload PDF Label -->
        <TextView
            android:id="@+id/pdfLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Assignment File (PDF)"
            android:textColor="#B3FFFFFF"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/dueTimeCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Upload Button -->
        <Button
            android:id="@+id/uploadPdfButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:text="Upload PDF"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1A2B5A"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@id/pdfLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- PDF file name -->
        <TextView
            android:id="@+id/pdfFileNameText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="No file selected"
            android:textColor="#B3FFFFFF"
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@id/uploadPdfButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Edit Button -->
        <Button
            android:id="@+id/editAssignmentButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="#4D9BE6"
            android:text="Edit Assignment"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@id/pdfFileNameText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
